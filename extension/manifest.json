{
    "manifest_version": 3,
    "name": "Interlinked",
    "description": "Every single comment. In one place. Interlinked.",
    "version": "0.0.1",
    "icons": {
        "16": "logo/darkmode/white-16.png",
        "48": "logo/darkmode/white-48.png",
        "128": "logo/darkmode/white-128.png"
    },
    "action": {
        "default_title": "Interlinked",
        "default_popup": "popup/popup.html"
    },
    "author": "Peter Bou-Farah, Sam Pich, Jacob Taylor, Lucas Graham",
    "permissions": [
        "tabs"
    ],
    "host_permissions": ["*://*/*"],
    "content_scripts": [{
      "js": ["popup/popup.js"],
      "matches": ["*://*/*"]
  }]
}