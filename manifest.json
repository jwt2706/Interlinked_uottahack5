{
    "manifest_version": 3,
    "name": "Interlinked",
    "description": "Every single comment. In one place. Interlinked.",
    "version": "0.0.1",
    "action": {
        "default_title": "Interlinked",
        "default_popup": "popup/popup.html"
    },
    "permissions": [],
    "host_permissions": ["*://*/*"],
    "content_scripts": [{
      "js": ["popup/popup.js"],
      "matches": ["*://*/*"]
  }]
}